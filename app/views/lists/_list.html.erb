<li id="<%= dom_id list %>" class="relative">
  <div class="group aspect-w-10 aspect-h-7 block w-full top-black overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
    <h2 class="my-5">
      <%= list.name %>
    </h2>
    <img src="<%= list.movies.first.url %>" alt="List thumbnail" class="pointer-events-none mb-6 object-cover group-hover:opacity-75" style="max-height: 420px;">
    <% if action_name != "show" %>
      <%= link_to 'Edit this list', edit_list_path(list), class: "text-center w-full btn btn-secondary" %>
      <%= button_to 'Delete this list', list, method: :delete, class: "w-full btn btn-danger" %>
      <hr class="mt-6">
      <p class="mt-1 text-sm text-gray-600 text"><%= list.bookmarks.length %> movies in this list</p>
    <% end %>
  </li>
