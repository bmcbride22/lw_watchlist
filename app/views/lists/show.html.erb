<h1 class="pb-10 text-6xl align-text-top"><%= @list.name %></h1>
<div>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% if @list.bookmarks.length > 0 %>
      <% @list.bookmarks.each do |bookmark| %>
        <div>
          <%= link_to movie_path(bookmark.movie) do %>
            <%= render 'movies/movie_card', movie: bookmark.movie %>
          <% end %>
          <%= button_to 'Remove from list', bookmark_path(bookmark), method: :delete, class:"flex w-full opacity-70 justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to movies_path do %>
        <%= render 'movies/empty_movie_card' %>
      <% end %>
    <% end %>
  </ul>
</div>
